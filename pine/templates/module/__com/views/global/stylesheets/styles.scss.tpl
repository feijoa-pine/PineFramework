{:fileheader}
a {
    text-decoration:    none;
    
    color:              dodgerblue;
    font-family:        helvetica, arial, "hiragino kaku gothic pro", meiryo, "ms pgothic", sans-serif;

    &:hover
    {
        color:          crimson !important;
    }
}

.button-area {
    width:          100%;
    padding:        10px 0;
}

.scroll-top-area {
    box-sizing:     border-box;
    display:        none;
    position:       fixed;
    right:          20px;
    bottom:         20px;
    padding:        0 0 0 0;
    
    text-align:     center;
    z-index:        65536;
    
    button {
        box-sizing:     border-box;
        padding:        0.1em 0.5em;
        font-size:      1.5em !important;
        text-align:     center;
        
        i {
            margin:     0;
            padding:    0;
        }
    }
}

